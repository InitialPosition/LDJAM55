function scr_dialog_get_script(_id) {
	switch _id {
		case 0:
			return "Uh... hello... Thank you for summoning me..."
		case 1:
			return "Oh... you wanted to summon a demon, huh? Oooh..."
		case 2:
			return "Well... I am here now... and I can't leave until you beat me at my game... ooooo..."
		case 3:
			return "RED CARDS attack, BLUE CARDS protect."
		case 4:
			return "You attack on the left and defend on the right. Try not to die."
		case 5:
			return "When you run out of cards, your discard pile will turn into your new deck."
		case 6:
			return "Well... I guess we should start... oooooooooo..."
	}
}
